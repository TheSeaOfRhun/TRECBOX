# prettyprint the single-measure tables
# they are usually nameds tab0.*.map, where 'map' is the measure

BEGIN{
     # f = "../../viz/tab0.s-model.map"
     f = "../../viz/tab0.rand.s-model.map"
     if (f ~ /rand/)
	  h = "A B C D E F G H I J"
     else
	  h = "t678 t678-fr t6 t7 t8 fbis fr94 ziff1 ziff2 ziff3"
     n = split(h, a, " ")
     fmt = "%-20s"
     h1 = sprintf(fmt, "")
     for (i=1; i<=n; i++)
	  h1 = h1 sprintf(" %-6s", a[i])
     h1 = h1 sprintf("\n")

     printf(h1)
     while(getline <f)
     {
	  print
	  if (NR % 4 == 0)
	       printf("\n")
     }
}
